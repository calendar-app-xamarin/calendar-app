<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CalendarApp.View.NewNote">
    <ContentPage.Content>
        <ContentView>
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <StackLayout Orientation="Vertical">
                    <Entry x:Name="TitleEntry" Margin="20,20,20,10" Placeholder="Enter Note Title"/>
                    <Editor x:Name="DetailsEntry" Margin="20,0,20,0" Placeholder="Enter Details"/>
                    <Button Margin="20,0,20,0" Text="DONE" Clicked="AddNote"/>
                    <Button Margin="20,0,20,0" Text="CANCEL" Clicked="CancelAction"/>
                </StackLayout>
            </StackLayout>
        </ContentView>
    </ContentPage.Content>
</ContentPage>
